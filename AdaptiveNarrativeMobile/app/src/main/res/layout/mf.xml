<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.adaptivemedia.adaptivenarrativemobile.MyLinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="400dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="30dp"
            android:text="AAAAAAAAA"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_marginTop="0dp"
            android:background="@android:color/darker_gray"
            android:elevation="7dp"
            app:srcCompat="@drawable/ic_menu_gallery"
            android:layout_width="200dp"
            android:layout_height="275dp"></ImageButton>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/quantum_ic_play_circle_filled_white_36"
            android:id="@+id/launchPodcast"
            app:backgroundTint="?attr/colorControlHighlight"
            app:elevation="8dp"
            android:layout_marginTop="-155dp"
            android:paddingLeft="0dp"
            app:fabSize="mini"
            android:adjustViewBounds="false" />

    </com.adaptivemedia.adaptivenarrativemobile.MyLinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.01" />


</LinearLayout>